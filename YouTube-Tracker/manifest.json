{
  "manifest_version": 2,
  "name": "YouTube Scrolling Tracker",
  "version": "1.4.3",
  "description": "Tracks YouTube scrolling behavior and detects doomscrolling patterns",
  
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "*://*.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "background": {
    "scripts": ["background/background.js", "background/model.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Scrolling Stats"
  },
  
  "applications": {
    "gecko": {
      "strict_min_version": "57.0"
    }
  }
}